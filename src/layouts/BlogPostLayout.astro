---
import type { CollectionEntry } from 'astro:content';

type Props = {
  post: CollectionEntry<'blog'>;
};

const { post } = Astro.props;
const isDistributedLiving = post.slug === 'distributed-living';
---

<article class="prose prose-neutral max-w-[65ch] prose-img:rounded-xl">
  <h1>{post.data.title}</h1>
  {post.data.description && <p class="text-xl">{post.data.description}</p>}
  <hr />
  <slot />
  {isDistributedLiving && <></>}
</article>

<style>
  article {
    max-width: 100%;
    margin: 0 auto;
  }
</style>
